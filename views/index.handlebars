<!DOCTYPE html>
<html>
<title>Developer Toolbox</title>
<head>

    <link rel="shortcut icon"
          href="/img/wrench.ico">


    <!-- Bootstrap - Latest compiled and minified CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
          integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ=="
          crossorigin="anonymous">

    <!-- Bootstrap - Optional theme -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css"
          integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX"
          crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <link rel='stylesheet' type='text/css' href='/styles/main.css'>
</head>
<body ng-app="dtk">


<div class="container-fluid">

    <!-- Header -->
    <div class="row header">
        <div class="col-xs-8 cell"><h3><i class="fa fa-wrench fa-4"></i>
            Developer
            Toolbox</h3></div>
        <div class="col-xs-4 cell">

            {{#if isAuthenticated}}
                <div class="pull-right">
                    {{userId}}
                    <img class="userAvatar"
                         src="{{avatarUrl}}"
                         alt="user name"
                         height="32" width="32"/>
                </div>
            {{else}}
                <form action="login/github"
                      method="get">
                    <button type="submit"
                            class="btn btn-primary pull-right"
                            alt="GitHub Log In">
                        <i class="fa fa-github-alt fa-3"></i> Log In
                    </button>
                </form>
            {{/if}}
        </div>
    </div>

    <div class="row content">
        <div class="col-xs-3">
            <div class="cell "  ng-controller="tocController as toc">

                <div class="tocItem"
                     ng-click="toc.selectedItem = tocItem"
                     ng-class="{selected: toc.selectedItem.name == tocItem.name}"
                     ng-repeat="tocItem in toc.tocItems">{[{ tocItem.name }]}</div>
            </div>
        </div>

        <div class="col-xs-9">
            <div class="cell">

            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
<script>
    angular.module('dtk', [])
            .config(function($interpolateProvider){
                $interpolateProvider.startSymbol('{[{').endSymbol('}]}');
            })
            .controller('tocController', function () {

                this.tocItems = [
                    {name: 'To Lowercase'},
                    {name: 'To Uppercase'},
                    {name: 'Regex Tester'},
                    {name: 'Timestamp Converter'},
                    {name: 'JSON Parser'}
                ];

                this.selectedItem = this.tocItems[0];
            })
</script>

</body>
</html>
